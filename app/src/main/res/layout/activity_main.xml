
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#212121"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            android:padding="6dip"
                            android:layout_height="match_parent">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:id="@+id/image1"
                                android:onClick="doSomething">
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/back11"
                                    android:layout_width="fill_parent"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:id="@+id/txt1"
                                    android:padding="8dp"
                                    android:textColor="#FFFFFF"
                                    android:text="@string/abtFusion"
                                    android:layout_gravity="bottom"
                                    android:gravity="center_horizontal"
                                    android:textSize="20sp"
                                    />
                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:padding="6dip"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:id="@+id/image2"
                                android:onClick="doSomething"
                                >
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:src="@drawable/abtussss"
                                    android:scaleType="centerCrop"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:padding="8dp"
                                    android:text="@string/aboutUs"
                                    android:layout_gravity="bottom"
                                    android:gravity="center_horizontal"
                                    android:textSize="20dp"
                                    android:textColor="#FFFFFF"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:padding="5dip"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:id="@+id/image3"
                                android:onClick="doSomething">
                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/even"
                                    android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    />
                                <TextView
                                    android:id="@+id/events"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/events"
                                    android:layout_gravity="bottom"
                                    android:textColor="#DDDDDD"
                                    android:padding="20dp"
                                    android:gravity="center_horizontal"
                                    android:textSize="20dp"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:padding="6dip"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:id="@+id/scduele"
                                app:cardBackgroundColor="#1a1a1a"
                                android:onClick="doSomething"
                                >
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/sche"
                                    android:layout_width="fill_parent"
                                    />
                                <TextView
                                    android:id="@+id/schedule"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="SCHEDULE"
                                    android:layout_gravity="bottom"
                                    android:textColor="#DDDDDD"
                                    android:padding="20dp"
                                    android:gravity="center_horizontal"
                                    android:textSize="20sp"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:padding="6dip"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:id="@+id/image5"
                                android:onClick="doSomething"
                                >
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/websi"
                                    android:layout_width="fill_parent"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/visitSite"
                                    android:padding="8dp"
                                    android:textColor="#FFFFFF"
                                    android:layout_gravity="bottom"
                                    android:gravity="center_horizontal"
                                    android:textSize="20dp"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:padding="6dip"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:id="@+id/image6"
                                android:onClick="doSomething"
                                >
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/applufinal"
                                    android:layout_width="fill_parent"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:padding="6dip"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                app:cardBackgroundColor="#0b0b0b"
                                android:id="@+id/cont"
                                android:onClick="doSomething"
                                >
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/corememe"
                                    android:layout_width="fill_parent"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="CORE-MEMBERS"
                                    android:padding="6dp"
                                    android:textColor="#FFFFFF"
                                    android:layout_gravity="bottom"
                                    android:gravity="center_horizontal"
                                    android:textSize="18dp"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:padding="6dip"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:id="@+id/dev"
                                android:onClick="doSomething"
                                >
                                <ImageView
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/deve"
                                    android:layout_width="match_parent"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="DEVELOPED BY"
                                    android:padding="6dp"
                                    android:textColor="#FFFFFF"
                                    android:layout_gravity="bottom"
                                    android:gravity="center_horizontal"
                                    android:textSize="18dp"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
    </LinearLayout>
